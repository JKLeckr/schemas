{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/JKLeckr/schemas/refs/heads/apworld-main/levelrules.schema.json",
  "schema_version": "v1",
  "title": "APWorld Level Rules",
  "description": "Schema for defining level rules in an Archipelago APWorld.",
  "type": "object",
  "required": ["levels"],
  "properties": {
    "presets": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/ruleContainer" }
    },
    "levels": {
      "type": "object",
      "propertyNames": { "type": "string" },
      "additionalProperties": { "$ref": "#/$defs/level" }
    }
  },
  "additionalProperties": false,

  "$defs": {
    "depSelector": {
      "type": "string",
      "pattern": "^!?[A-Za-z_][A-Za-z0-9_]*$"
    },

    "whenList": {
      "type": "array",
      "items": { "$ref": "#/$defs/depSelector" },
      "uniqueItems": true
    },

    "ruleExpr": {
      "oneOf": [
        {
          "type": "object",
          "required": ["rule"],
          "properties": {
            "rule": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["preset"],
          "properties": {
            "preset": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["and"],
          "properties": {
            "and": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/ruleExpr" }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["or"],
          "properties": {
            "or": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/ruleExpr" }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["not"],
          "properties": {
            "not": { "$ref": "#/$defs/ruleExpr" }
          },
          "additionalProperties": false
        }
      ]
    },

    "ruleFragment": {
      "type": "object",
      "required": ["requires"],
      "properties": {
        "when": { "$ref": "#/$defs/whenList" },
        "requires": { "$ref": "#/$defs/ruleExpr" }
      },
      "additionalProperties": false
    },

    "ruleContainer": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": { "$ref": "#/$defs/ruleFragment" }
        }
      },
      "additionalProperties": false
    },

    "location": {
      "type": "object",
      "properties": {
        "rule": { "$ref": "#/$defs/ruleContainer" },
        "inherit": {
          "type": "string",
          "enum": ["and", "or", "none"]
        }
      },
      "additionalProperties": false
    },

    "level": {
      "type": "object",
      "properties": {
        "access": { "$ref": "#/$defs/ruleContainer" },
        "base": { "$ref": "#/$defs/ruleContainer" },
        "locations": {
          "type": "object",
          "propertyNames": { "type": "string" },
          "additionalProperties": { "$ref": "#/$defs/location" }
        }
      },
      "additionalProperties": false
    }
  }
}
